<h1>Listing datebodydata</h1>
<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>

<table>
  <thead>
    <tr>
      <th>日付</th>
      <th>体重</th>
      <th>脈拍</th>
    </tr>
  </thead>

  <tbody>
    <% @datebodydata.each do |datebodydatum| %>
      <tr>
        <td><%= datebodydatum.date.try(:strftime, "%Y-%m-%d") %></td>
        <td><%= number_with_precision(datebodydatum.weight, precision: 1) %></td>
        <td><%= number_with_precision(datebodydatum.pulse, precision: 0) %>
        <td><%= link_to 'Show', datebodydatum %></td>
        <td><%= link_to 'Edit', edit_datebodydatum_path(datebodydatum) %></td>
        <td><%= link_to 'Destroy', datebodydatum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= line_chart [
    {name: "体重", data: @graphdata, min: 50, max: 70},
    {name: "脈拍", data: @chartdata, min: 50, max: 130}
] %>
<%= link_to 'New Datebodydatum', new_datebodydatum_path %>
